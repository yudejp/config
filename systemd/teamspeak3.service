[Unit]
Description=TeamSpeak 3 Server
After=network.target

[Service]
Type=forking
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/ts3
ExecStart=/home/ubuntu/ts3/ts3server_startscript.sh start inifile=/opt/teamspeak3-server/ts3server.ini
ExecStop=/home/ubuntu/ts3/ts3server_startscript.sh stop
ExecReload=/home/ubuntu/ts3/ts3server_startscript.sh restart
PIDFile=/home/ubuntu/ts3/ts3server.pid
RestartSec=15
Restart=always

[Install]
WantedBy=multi-user.target